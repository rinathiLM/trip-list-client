{{#if trips}}
  {{#each trips as |trip|}}
    <div class="grid col-sm-6 col-md-4">
      <h3>{{trip.location}}</h3>
      <div class="thumbnail">
        <img src="{{trip.image}}" onerror=this.src="https://i.imgur.com/BRA2mQf.png">
        <div class="clearfix"></div>
        <div class="caption">
          <h4>Ready to check this place off your list? {{trip.done}}</h4>
          <button class="btn btn-default" data-id="{{trip.id}}" data-toggle="modal" data-target="#update-trip-modal{{trip.id}}"><span class="glyphicon glyphicon-pencil"></span>
        </button>
          <button class="btn btn-default" data-id="{{trip.id}}" data-toggle="modal" data-target="#delete-trip-modal{{trip.id}}"><span class="glyphicon glyphicon-trash"></span>
        </button>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <h3>It doesn't look like you have any trips.</h3>
{{/if}}
</table>

<!-- MODALS -->
{{#each trips as |trip|}}
  <!-- update trip modal -->
  <div class="modal fade" id="update-trip-modal{{trip.id}}" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <span id="update-message"></span>
        </div>
        <div class="modal-body">
          <p>Did you visit this place?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="update-trip btn btn-success" data-id="{{trip.id}}">Yes!</button>
          <button type="button" class="undo-update btn btn-default" id="clearUpdate" data-id="{{trip.id}}" data-dismiss="modal">Not yet</button>
        </div>
      </div>
    </div>
  </div>
  </div>

  <!-- delete trip modal with warning -->
  <div class="modal fade" id="delete-trip-modal{{trip.id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <span id="delete-message"></span>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this trip?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="delete-trip btn btn-danger" data-id="{{trip.id}}">Delete</button>
          <button type="button" class="btn btn-default" id="clearDelete" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>

{{/each}}
